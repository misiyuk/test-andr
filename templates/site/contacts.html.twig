{% extends 'base.html.twig' %}

{% block title %}Hello SiteController!{% endblock %}

{% block body %}
    <h1>Contact!</h1>
    <table class="table table-bordered">
        <thead>
            <tr>
                <th>Номер</th>
                <th>Емэил</th>
            </tr>
        </thead>
        <tbody>
            {% for contact in contacts %}
            <tr>
                <th>{{ contact.phone }}</th>
                <th>{{ contact.email }}</th>
            </tr>
            {% endfor %}
        </tbody>
    </table>
{% endblock %}
